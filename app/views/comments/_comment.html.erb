<div class="comment-card">

  <div class="card">

    <div class="card-block">

      <div class="row">

        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>

        <div class="col-md-10 comment-text">
          <div>
            <%= comment.content %>

          </div>

          <div class="comment-user-info">
            <span class="comment-user-info-name"><%= comment.user.first_name %></span>
            <%= distance_of_time_in_words(comment.created_at, Time.now) %>
          </div>
        </div>

      </div>

    </div>

  </div>

</div>