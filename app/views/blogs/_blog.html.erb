<tr>
  <td><%= blog.title %></td>
  <td><%= distance_of_time_in_words(blog.created_at, Time.now).titleize %> Ago</td>
  <td><%= blog.body %></td>
  <% if logged_in? :site_admin %>
    <td><%= link_to "Post status: #{blog.status.titleize}", toggle_status_blog_path(blog) %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% else %>
    <td><%= link_to 'Show', blog %></td>
  <% end %>
</tr>