<%= form_with(model: blog, local: true) do |form| %>

  <% if blog.errors.any? %>

    <% blog.errors.full_messages.each do |error| %>

      <%= js add_gritter(error, title: "Error!", sticky: false) %>

    <% end %>

  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit "#{button_text_helper(new_blog_path)} Blog Item", class: 'btn btn-primary' %>
  </div>
<% end %>
