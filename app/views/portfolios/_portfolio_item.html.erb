<div class="card" data-id="<%= portfolio_item.id %>">
  <%= image_tag portfolio_item.thumb_image.to_s, class: 'img-thumbnail' unless portfolio_item.thumb_image.nil? %>


  <h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: 'stretched-link'%></h2>

  <h3><%= portfolio_item.subtitle %></h3>


  <% if logged_in? :site_admin %>
    <%= link_to "Edit Portfolio Item #{portfolio_item.id}",
                edit_portfolio_path(portfolio_item) %>

    <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item),
                method: :delete,
                data:   { confirm:
                              'Are you sure you wish to permanently delete this
                      portfolio item?' } %>
  <% end %>

</div>
