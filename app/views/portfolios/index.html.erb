<div><%= link_to "Back to Home", root_path %></div>

<h1>Portfolio Items</h1>

<%= link_to 'Create New Portfolio Item', new_portfolio_url %>

<% @portfolio_items.each do |portfolio_item| %>

  <h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%></h2>
  <h3><%= portfolio_item.subtitle %></h3>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
  <%= link_to "Edit Portfolio Item #{portfolio_item.id}",
              edit_portfolio_path(portfolio_item) %>
  <%=  link_to "Delete Portfolio Item", portfolio_path(portfolio_item),
               method: :delete,
               data: {confirm: "Are you sure you wish to permanently delete this
portfolio item?"}%>
<% end %>
