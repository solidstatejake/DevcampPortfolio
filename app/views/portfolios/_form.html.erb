<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">

    <div class="col-md-6">

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group btn btn-primary">
        <label>
          Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none' %>
        </label>
      </div>

      <div class="form-group btn btn-primary">
        <label>
          Upload a main image file<%= form.file_field :main_image, style: 'display:none' %>
        </label>

      </div>

    </div>

    <div class="col-md-6">

      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control' %>
      </div>

    </div>

  </div>

  <div class="col-md-12">

    <h2>Technologies Used:</h2>
    <%# if request.fullpath == new_portfolio_path %>

    <div>
      <%= form.fields_for :technologies do |tech_form| %>
        <%= render 'technology_fields', f: tech_form%>

      <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', form, :technologies %>
      </div>

    </div>


    <div class="form-group">
      <%= form.submit 'Create Portfolio Item', class: 'btn btn-primary' %>
    </div>

  </div>
<% end %>
